@model List<UserModel>
@{
    ViewData["Title"] = "Admin Panel";
}
<h1 class="text-center"> Users</h1>
<br />
<a role="button" class="btn btn-primary btn-sm" asp-controller="AdminPanel" asp-action="Create">Create new user</a>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
                <th scope="col">Administrator</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserModel user in Model.Where(u => u.Role == "Privileged"))
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a role="button" class="btn btn-primary btn-sm" asp-route-id="@user.Id" asp-controller="AdminPanel" asp-action="Show">Show</a>
                        <a role="button" class="btn btn-warning btn-sm" asp-route-id="@user.Id" asp-controller="AdminPanel" asp-action="Edit">Edit</a>
                        <form asp-controller="AdminPanel" asp-action="SetAsEndUser" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger">Set as EndUser</button>
                        </form>
                    </td>
                    <td>
                        <div class="form-check form-switch text-center">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />
    <h1>Pending Users</h1>
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserModel user in Model.Where(u => u.Role == "EndUser"))
            {
                 <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-controller="AdminPanel" asp-action="Accept" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-success">Accept</button>
                        </form>
                        <!--
                        <a role="button" class="btn btn-danger">Reject</a>
                        -->
                    </td>
                </tr>
            }
        </tbody>    
    </table>
</div>
<button role="button" class="btn btn-secondary btn-sm">Export Data</button>