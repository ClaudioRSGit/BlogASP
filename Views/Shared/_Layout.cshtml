<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogASP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogASP.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Index">Articles</a>
                            </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <div class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="AdminPanel" asp-action="PendingUsers">Pending Users</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="AdminPanel" asp-action="Users">Users</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="AdminPanel" asp-action="Articles">Articles</a>
                                    <a class="dropdown-item" asp-controller="AdminPanel" asp-action="Create" >New User</a>
                                    <a class="dropdown-item" href="@Url.Action("ExportToCSV", "AdminPanel")">Export Data</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <button class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Login">Login</a>
                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-light">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="SignUp">Sign Up</a>
                                </button>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link text-dark">Logged: @User.Identity.Name </span>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-light">
                                    <a class="nav-link text-dark" asp-action="Logout" asp-controller="Login" method="post">Logout</a>
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>
    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @Html.ValidationSummary()
</body>
</html>
<style>
    footer{
        z-index: 100;
        background-color: #FFF;
    }
</style>